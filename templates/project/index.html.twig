{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <!-- Project page of my portfolio -->
    <!-- Header with sticky menu between for better user experience -->
    <header>
        <nav class="flex justify-between items-center w-[92%] mx-auto">
            <div>
                <a class="w-16" href="#">Jordan</a>
            </div>
            <div class="nav-links duration-500 md:static absolute md:min-h-fit min-h-[60vh] left-0 top-[-100%] md:w-auto w-full flex items-center px-5">
                <ul class="flex md:flex-row flex-col md:items-center md:gap-[4vw] gap-8">
                    <li>
                        <a class="hover:text-gray-500" href="/">Accueil</a>
                    </li>
                    <li>
                        <a class="hover:text-gray-500" href="/projects">Mes projets</a>
                    </li>
                    <li>
                        <a class="hover:text-gray-500" href="#">Me contacter</a>
                    </li>
                </ul>
            </div>
            <div class="flex items-center gap-6">
                <box-icon onclick="onToggleMenu(this)" color="#BABEC4FF" name='menu' class="cursor-pointer md:hidden"></box-icon>
            </div>
        </nav>
    </header>

    <main>
        <h1>Mes projets</h1>
        <div id="projects_container">
            <div id="rover">
                <img src="{{ asset('img/rover-no-bg.png') }}" alt="Projet Rover">
                <h2>Rover</h2>
                <a href="https://github.com/Astagoth/Projet-Rover" target="_blank">
                    <box-icon type='logo' name='github' color="#BABEC4FF" size="lg" animation='tada-hover'></box-icon>
                </a>
            </div>
            <div id="lastbreakout">
                <img src="{{ asset('img/soon-no-bg.png') }}" alt="A venir...">
                <h2>Last Breakout</h2>
                <a href="https://github.com/Astagoth/last-breakout " target="_blank">
                    <box-icon type='logo' name='github' color="#BABEC4FF" size="lg" animation='tada-hover'></box-icon>
                </a>
            </div>
        </div>
        
    </main>
{% endblock %}
